

@{
    Layout = "_LayoutAdmin";
}

@model EducationModel
@section CardHeader {
    <span>Eğitim Ekle</span>
}
<div class="row">
    <div class="col-md-4">
        @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
        {
            <form asp-controller="Education" asp-action="Add" method="post">

            <div class="mb-2">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-2">
                <label asp-for="LessonId"> </label>
                <select asp-for="LessonId" class="form-control" asp-items="@ViewBag.Lessons">
                    <option value="">Seçiniz</option>
                </select>
            </div>
            <div class="mb-2">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="mb-2">

                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive"></label>
                <span class="text-danger" asp-validation-for="IsActive"></span>
            </div>
            <div class="mb-2">
                <input type="submit" value="Kaydet" class="btn btn-primary btn-sm" />
            </div>
        </form>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}